<launch>

  <!-- sample rosbag play -->
  <node name="sample_rosbag_play" pkg="rosbag" type="play"
        args="$(find safe_footstep_planner)/bagfiles/sample_color.bag -l"
        output="screen">
  </node>

  <!-- red color filter -->
  <include file="$(find opencv_apps)/launch/hsv_color_filter.launch" >
    <arg name="node_name" value="red_color_filter" />
    <arg name="image" value="/camera/rgb/image_raw" />
    <!-- params for red -->
    <arg name="h_limit_max" value="35" doc="The maximum allowed field value Hue" />
    <arg name="h_limit_min" value="304" doc="The minimum allowed field value Hue" />
    <arg name="s_limit_max" value="181" doc="The maximum allowed field value Saturation" />
    <arg name="s_limit_min" value="0" doc="The minimum allowed field value Saturation" />
    <arg name="v_limit_max" value="239" doc="The maximum allowed field value Value" />
    <arg name="v_limit_min" value="255" doc="The minimum allowed field value Value" />
    <arg name="debug_view" value="false" />
  </include>

  <!-- green color filter -->
  <include file="$(find opencv_apps)/launch/hsv_color_filter.launch" >
    <arg name="node_name" value="green_color_filter" />
    <arg name="image" value="/camera/rgb/image_raw" />
    <!-- params for green -->
    <arg name="h_limit_max" value="158" doc="The maximum allowed field value Hue" />
    <arg name="h_limit_min" value="113" doc="The minimum allowed field value Hue" />
    <arg name="s_limit_max" value="243" doc="The maximum allowed field value Saturation" />
    <arg name="s_limit_min" value="162" doc="The minimum allowed field value Saturation" />
    <arg name="v_limit_max" value="241" doc="The maximum allowed field value Value" />
    <arg name="v_limit_min" value="6" doc="The minimum allowed field value Value" />
    <arg name="debug_view" value="false" />
  </include>

  <!-- blue color filter -->
  <include file="$(find opencv_apps)/launch/hsv_color_filter.launch" >
    <arg name="node_name" value="blue_color_filter" />
    <arg name="image" value="/camera/rgb/image_raw" />
    <!-- params for blue  -->
    <arg name="h_limit_max" value="245" doc="The maximum allowed field value Hue" />
    <arg name="h_limit_min" value="195" doc="The minimum allowed field value Hue" />
    <arg name="s_limit_max" value="200" doc="The maximum allowed field value Saturation" />
    <arg name="s_limit_min" value="256" doc="The minimum allowed field value Saturation" />
    <arg name="v_limit_max" value="252" doc="The maximum allowed field value Value" />
    <arg name="v_limit_min" value="103" doc="The minimum allowed field value Value" />
    <arg name="debug_view" value="false" />
  </include>

  <!-- masked images to label -->
  <node name="maske_images_to_label" pkg="safe_footstep_planner" type="masked_image_to_label"/>

</launch>
